<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackingDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"><![CDATA[>

        ]]>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/trackingDetailBack"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:text="@string/back" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="22dp"
                android:fontFamily="@font/urbanist"
                android:text="Tracking Detail"
                android:textAlignment="center"
                android:textAppearance="@style/hello_regis"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="15dp"
            android:background="@color/teal_200"
            app:srcCompat="@drawable/ic_baseline_analytics_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:text="Tracking ID"
                    android:textAppearance="@style/menu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/trackingDetailID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:textAppearance="@style/menu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:text="Date Taken"
                    android:textAppearance="@style/menu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/trackingDetailDateTaken"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:textAppearance="@style/menu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:text="Weight"
                    android:textAppearance="@style/menu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/trackingDetailWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:textAppearance="@style/menu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:text="Height"
                    android:textAppearance="@style/menu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/trackingDetailHeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:textAppearance="@style/menu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:text="BMI"
                    android:textAppearance="@style/menu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/trackingDetailBmi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:textAppearance="@style/menu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:text="Progress"
                    android:textAppearance="@style/menu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/trackingDetailProgress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:textAppearance="@style/menu" />
            </LinearLayout>

            <Button
                android:id="@+id/trackingDetailDelete"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="22dp"
                android:text="Delete Tracking"
                android:textAppearance="@style/menu"
                android:fontFamily="@font/urbanist"
                android:background="@drawable/rectangle_1" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>