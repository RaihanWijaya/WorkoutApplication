<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/profileBack"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:text="@string/back" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="22dp"
                android:fontFamily="@font/urbanist"
                android:text="Welcome to your profile!"
                android:textAlignment="center"
                android:textAppearance="@style/hello_regis"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_baseline_person_24"
            android:background="@color/teal_200"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:text="User ID"
                    android:textAppearance="@style/menu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileUserID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist"
                    android:text="Username"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileUsername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/profileList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="22dp"
            android:fontFamily="@font/urbanist"
            android:textAppearance="@style/menu"
            android:text="List Workout" />

        <ListView
            android:id="@+id/lvDailyWorkout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="22dp"
            android:fontFamily="@font/urbanist" />

        <Button
            android:id="@+id/profileAddWorkout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:text="Add a Workout"
            android:textAppearance="@style/menu"
            android:fontFamily="@font/urbanist"
            android:background="@drawable/rectangle_1" />

        <Button
            android:id="@+id/profileLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:text="Logout from Account"
            android:textAppearance="@style/menu"
            android:fontFamily="@font/urbanist"
            android:background="@drawable/rectangle_1" />

        <Button
            android:id="@+id/profileDelete"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:text="Delete My Account"
            android:textAppearance="@style/menu"
            android:fontFamily="@font/urbanist"
            android:background="@drawable/rectangle_1" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>