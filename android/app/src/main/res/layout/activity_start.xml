<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <RelativeLayout
        android:id="@+id/welcome"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/welcome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/startLogin"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="567dp"
            android:fontFamily="@font/urbanist"
            android:layout_marginRight="22dp"
            android:background="@drawable/rectangle_4"
            android:text="Login" />

        <Button
            android:id="@+id/startRegister"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="638dp"
            android:fontFamily="@font/urbanist"
            android:layout_marginRight="22dp"
            android:background="@drawable/rectangle_4"
            android:text="Register" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="395dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/startworkout" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="22dp"
            android:fontFamily="@font/urbanist"
            android:text="Workout Application"
            android:textAlignment="center"
            android:textAppearance="@style/welcome_bac"
            android:textStyle="bold"
            android:translationY="-1.5sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>