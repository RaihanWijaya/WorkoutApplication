<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/workoutBack"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="15dp"
                android:text="@string/back" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="22dp"
                android:fontFamily="@font/urbanist"
                android:text="Workout Detail"
                android:textAlignment="center"
                android:textAppearance="@style/hello_regis"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_baseline_analytics_24"
            android:background="@color/teal_200"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanist"
                    android:text="Workout ID"
                    android:textAppearance="@style/menu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/workoutID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist"
                    android:text="Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/workoutName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist"
                    android:text="Body Part"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/workoutBodypart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist"
                    android:text="Reps"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/workoutReps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist"
                    android:text="Sets"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/workoutSets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="22dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/menu"
                    android:fontFamily="@font/urbanist" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/workoutEdit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:text="Edit Workout"
            android:textAppearance="@style/menu"
            android:fontFamily="@font/urbanist"
            android:background="@drawable/rectangle_1" />

        <Button
            android:id="@+id/workoutDelete"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:text="Delete Workout"
            android:textAppearance="@style/menu"
            android:fontFamily="@font/urbanist"
            android:background="@drawable/rectangle_1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>